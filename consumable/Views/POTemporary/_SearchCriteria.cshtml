<form role="form" class="form-horizontal _criteria" id="searchForm">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-3 col-sm-3 col-md-4">
                @* PO Date *@
                <div class="form-group form-group-xs _criteria">
                    <label class="col-xs-4 col-sm-3 col-md-4 control-label text-muted" required-left>
                        PO Date<b class="text-danger">*</b>
                    </label>
                    <div class="col-xs-8 col-sm-9 col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon" style="cursor: pointer;">
                                <i class="fa fa-calendar bigger-110">
                                </i>
                            </span>
                            <input class="form-control" type="text" name="date-range-picker" onkeypress="podatekeypress(event);" id="poCreatedDateSearch"
                                   data-date-format="dd.mm.yyyy" />
                        </div>
                    </div>
                </div>
                @* Material Doc No *@
                <div class="form-group form-group-xs _criteria">
                    <label class="col-xs-4 col-sm-5 col-md-4 control-label text-muted">
                        Material Doc No
                    </label>
                    <div class="col-xs-8 col-sm-7 col-md-8">
                        <div class="input-group pos-rel" style="width: 100%;">
                            <input id="dnNoSearch" class="form-control" type="text" value="" maxlength="50" onkeypress="onEnterSearchData(event);" />
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-xs _criteria" style="background-color: InfoBackground;
                margin-left: 1px; width: 320px;">
                    <label class="col-xs-6 col-sm-6 col-md-8 control-label text-muted" style="text-align: left;">
                        Selected Record (s) : <b><span id="sumManifest"></span></b>
                    </label>
                </div>

            </div>
            <div class="col-xs-3 col-sm-3 col-md-4">
                @* PO Number *@
                <div class="form-group form-group-xs _criteria">
                    <label class="col-xs-4 col-sm-5 col-md-4 control-label text-muted">
                        PO Number
                    </label>
                    <div class="col-xs-8 col-sm-7 col-md-8">
                        <div class="input-group pos-rel" style="width: 100%;">
                            <input id="poTextSearch" class="form-control" type="text" value="" onkeypress="onEnterSearchData(event);" />
                        </div>
                    </div>
                </div>
                @* Processed *@
                <div class="form-group form-group-xs _criteria">
                    <label class="col-xs-4 col-sm-5 col-md-4 control-label text-muted">
                        Processed
                    </label>
                    <div class="col-xs-8 col-sm-7 col-md-8">
                        <select id="processedSearch" class="cursor-1" style="width: 100%;" onkeypress="onEnterSearchData(event);">
                            <option class="cursor-1"></option>
                            <option class="cursor-1">Processed</option>
                            <option class="cursor-1">Not Process</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-4">
                @* Supplier *@
                <div class="form-group form-group-xs _criteria">
                    <label class="col-xs-4 col-sm-3 col-md-4 control-label text-muted">
                        Supplier
                    </label>
                    <div class="input-group input-group-xs col-xs-8 col-sm-7 col-md-7" style="padding-left: 11px;
                padding-right: auto; height: 30px;">
                        <input id="supplierSearch" class="form-control" type="text" style="font-size: 9pt; width: 190;"
                               value="@ViewData["vendCodeLogin"]" placeholder="Select supplier" onkeypress="onEnterSearchData(event);"
                               @ViewData["readonly"]>
                        <span class="input-group-btn">
                            <div class="btn-group" id="btn-group">
                                <button id="btnPopupLookupSupplierSearch" class="multiselect dropdown-toggle btn btn-default btn-sm"
                                        type="button" style="height: 30px; line-height: 0;" aria-expanded="false" onclick="javascript:openPopup()"
                                        @ViewData["disabled"]>
                                    <i class="fa fa-caret-down" style="margin-right: -4px"></i>&nbsp
                                </button>
                                <div class="form-horizontal multiselect-container dropdown-menu" style="left: -550px; width: 600px;">
                                    <div class="form-group form-group-xs">
                                        <div>
                                            <div class="input-group">
                                                <input id="txtSearchLookupSupplier" class="form-control" type="text" placeholder="input supplier...."
                                                       style="margin-left: 5px;" onkeypress="onEnterSearchDataLookupSupplier(event);" />
                                                <span class="input-group-btn">
                                                    <button type="button" id="btnSearchLookupSupplier"
                                                            data-loading-text="<i class='glyphicon-refresh-animate glyphicon glyphicon-refresh'></i>"
                                                            class=" btn btn-default btn-sm " style="margin-left: 5px; margin-right: 5px;
                                                height: 30px;">
                                                        &nbsp<i class="fa fa-search"></i>
                                                    </button>
                                                    <button id="btnClearSearchLookupSupplier" class=" btn btn-default btn-sm " title="Clear" type="button"
                                                            style="margin-right: 5px; height: 30px;" onclick="javascript:clearPopupFilter()">
                                                        &nbsp<i class="fa  fa-eraser"></i>&nbsp
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    @Html.Partial("_LookupTableSupplier")

                                    <div class="form-group form-group-xs">
                                        <div class="text-right" style="margin-right: 7px;">
                                            <button type="button" class="btn btn-primary btn-xs" style="width: 70px;" onclick="javascript:gridlookupSelected('OK')">
                                                Ok
                                            </button>
                                            <button type="button" class="btn btn-danger btn-xs" style="width: 70px;" onclick="javascript:gridlookupSelected('CS')">
                                                Cancel
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </span>
                    </div>
                </div>
                @* Supplier Status *@
                <div class="form-group form-group-xs _criteria">
                    <label class="col-xs-4 col-sm-5 col-md-4 control-label text-muted">
                        Supplier Status
                    </label>
                    <div class="col-xs-8 col-sm-7 col-md-8">
                        <select id="supplierStatusSearch" class="cursor-1" style="width: 100%;" onkeypress="onEnterSearchData(event);">
                            <option class="cursor-1"></option>
                            <option class="cursor-1">Active</option>
                            <option class="cursor-1">Not Active</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 text-right">
            <div class="form-group-xs _criteria" style="margin-bottom: 15px;">
                <button type="button" class="btn btn-primary btn-xs" onclick="javascript:searchData(1)">
                    Search
                </button>
                <button type="button" class="btn btn-default btn-xs" onclick="javascript:clearData()">
                    Clear
                </button>
            </div>
        </div>
    </div>
</form>

