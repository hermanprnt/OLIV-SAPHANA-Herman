<form role="form" class="form-horizontal _criteria" id="searchFormMobile" action="@Html.Toyota().Page.GetControllerUrl("ReceivingListMobile")">
<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="form-group form-group-xs _criteria">
            <label class="col-xs-4 col-sm-4 col-md-4 control-label text-muted">
                PO No</label>
            <div class="col-xs-8 ">
                <input type="text" id="txtPoNo" class="form-control" />
            </div>
        </div>
        <div class="form-group form-group-xs _criteria">
            <label class="col-xs-4 col-sm-4 col-md-4 control-label text-muted">
                Receiving Date</label>
            <div class="col-xs-8 col-sm-8 col-md-8">
                <div class="input-group" style="cursor: pointer;">
                    <input class="form-control date-picker" id="txtReceivingDate" type="text" data-date-format="dd.mm.yyyy" />
                    <span class="input-group-addon"><i class="fa fa-calendar bigger-110"></i></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="form-group form-group-xs _criteria">
            <label class="col-xs-4 col-sm-4 col-md-4 control-label text-muted">
                Supplier</label>
            <div class="col-xs-8 col-sm-8 col-md-8">
                <input type="text" id="txtSupplier" class="form-control" />
            </div>
        </div>
        <div class="form-group form-group-xs _criteria">
            <label class="col-xs-4 col-sm-4 col-md-4 control-label text-muted">
                Material Doc No</label>
            <div class="col-xs-8 col-sm-8 col-md-8">
                <input type="text" id="txtMaterialDocNo" class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="form-group form-group-xs _criteria">
            <label class="col-xs-4 col-sm-4 col-md-4 control-label text-muted">
                PO Date</label>
            <div class="col-xs-8 col-sm-8 col-md-8">
                <div class="input-group" style="cursor: pointer;">
                    <input class="form-control date-picker" id="txtPoDate" type="text" data-date-format="dd.mm.yyyy" />
                    <span class="input-group-addon"><i class="fa fa-calendar bigger-110"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-6" style="margin-top: 5px;">
    </div>
    <div class="col-xs-6 text-right">
        <div class="form-group-xs _criteria">
            <button type="submit" class="btn btn-primary btn-xs">
                Search</button>
            <button type="reset" class="btn btn-default btn-xs" onclick="javascript:clearData()">
                Clear</button>
        </div>
    </div>
</div>
</form>
