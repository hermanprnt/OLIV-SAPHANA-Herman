<div id="gridlookupemployeeinput" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="popup-title">
                    Employee Lookup</h4>
            </div>
            <div class="modal-body">
                @*<div class="row ">
                    <div class="col-xs-12 col-md-12">*@
                <div class="form-group form-group-xs">
                    <div>
                        <div class="input-group input-group-xs">
                            <input id="txtinputlookupuser" class="form-control" type="text" placeholder="input name...."
                                onkeypress="onEnterLookupInputUser(event);" />
                            <span class="input-group-btn">
                                <button type="button" id="btnSearchLookupUserInput" data-loading-text="<i class='glyphicon-refresh-animate glyphicon glyphicon-refresh'></i>"
                                    class=" btn btn-default btn-sm" style="line-height: 1.1; top: -1px; left: 5px;">
                                    &nbsp<i class="fa fa-search"></i>
                                </button>
                                <button id="btnClearLookupUserInput" class="btn btn-default btn-sm" title="Clear" type="button"
                                    style="line-height: 1.1; top: -1px; left: 10px; width: 43px;">
                                    &nbsp<i class="fa  fa-eraser"></i>&nbsp</button>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-xs">
                    @Html.Partial("_LookupTableUserInput")
                </div>
                @*</div>
                </div>*@
            </div>
            <div class="modal-footer">
                <button type="button" id="btncloselookup" class="btn btn-default btn-sm" data-dismiss="modal">
                    close</button>
            </div>
        </div>
    </div>
</div>
