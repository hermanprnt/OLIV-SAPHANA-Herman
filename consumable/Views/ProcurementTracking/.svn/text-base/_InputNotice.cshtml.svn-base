@using consumable.Models.InvoiceInquiry
<div id="inputnoticepopup" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span> <span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="popup-title">
                    Input Notice
                </h4>
            </div>
            <div class="modal-body">
                <form role="form" class="form-horizontal _criteria" id="inputInvoiceForm">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-9">
                        @* Notice Date *@
                        <div class="form-group form-group-xs">
                            <label class="col-xs-4 col-sm-3 col-md-5 control-label text-muted">
                                Notice Date</label>
                            <div class="col-xs-8 col-sm-9 col-md-5">
                                <div class="input-group" style="width: 100%; cursor: pointer;">
                                    @*<span class="input-group-addon" style="cursor: pointer;"><i class="fa fa-calendar bigger-110">
                                        </i></span>
                                        <input class="form-control" type="text" name="date-range-picker" id="id-date-range-picker-1"
                                            data-date-format="dd.mm.yyyy" />*@
                                    <input class="form-control date-picker mandatory" id="noticeDate" type="text" data-date-format="dd.mm.yyyy" />
                                    <span class="input-group-addon"><i class="fa fa-calendar bigger-110"></i></span>
                                </div>
                            </div>
                        </div>
                        @* Remarks *@
                        <div class="form-group form-group-xs">
                            <label class="col-xs-4 col-sm-3 col-md-5 control-label text-muted">
                                Remarks
                            </label>
                            <div class="col-xs-8 col-sm-9 col-md-5">
                                <div class="input-group" style="width: 100%;">
                                    <select id="remarks" class="cursor-1 mandatory">
                                        <option class="cursor-1"></option>
                                        <option class="cursor-1">Incorrect amount</option>
                                        <option class="cursor-1">Incorrect qty</option>
                                        <option class="cursor-1">Document not original</option>
                                        <option class="cursor-1">Supporting document not complete</option>
                                        <option class="cursor-1">Bank account not available</option>
                                        <option class="cursor-1">Unmatch PO and Invoice </option>
                                        <option class="cursor-1">PO Already paid</option>
                                        <option class="cursor-1">Incomplete Good Received</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="text-align: right; padding-right: 0px; padding-top: 5px;
                    margin-top: 10px; margin-right: 2px;">
                    <button type="button" class="btn btn-primary btn-xs" style="width: 60px;"
                        onclick="javascript:submitNotice()">
                        Submit</button>
                    <button type="reset" class="btn btn-default btn-xs" style="width: 60px;">
                        Clear</button>
                    <button class="btn btn-danger btn-xs" data-dismiss="modal" style="width: 60px;">
                        Close</button>
                </div>
                </form>
            </div>
        </div>
        @*<div class="modal-footer">
            <button type="button" id="btncloselookup" class="btn btn-default btn-xs" data-dismiss="modal">
                close</button>
        </div>*@
    </div>
</div>