<form method="post" id="frmUploadTaxInv" action="@Url.Content("~/VAT_Out/SaveTempData")" enctype="multipart/form-data" onsubmit="return Validate(this);" role="form">
    <div class="form-group-sm">
        <div class="col-md-4">
            <div class="input-group">
                @*<span class="input-group-addon btn btn-danger btn-sm" id="basic-addon2" onclick="$('#file').click();">Browse</span>*@
                <span class="input-group-btn">
                    <input type="button" class="btn btn-danger btn-sm" onclick="$('#fileUpload').click();" value="Browse" />
                </span>

                <input id="filename" type="text" class="form-control input-sm" placeholder="Upload Excel File" aria-describedby="basic-addon2">
            </div>
            <input type="file" name="fileUpload" style="visibility:hidden;" id="fileUpload" />@*<br />*@
        </div>
        <div class="col-md-1"><input type="submit" value="Upload" class="btn btn-danger btn-block btn-sm" onclick="$('#LoadingModal').modal('show')" id="UploadBtn" disabled /></div>
        <div class="col-md-1">
            <input type="button" class="btn btn-danger btn-sm" onclick="onDownloadTemplate()" value="Download Template" />
        </div>
        <div class="col-md-6"></div>
    </div>
</form>