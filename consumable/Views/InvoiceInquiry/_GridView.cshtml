    <div class="table-responsive _table-flow-2 afixed-table-container" id="generalDataTable-container">
        <div class="afixed-table-viewport" id="generalDataTable-viewport"></div>

        <table class="table table-bordered table-condensed table-stripped afixed-table" id="generalDataTable">
            <thead>
