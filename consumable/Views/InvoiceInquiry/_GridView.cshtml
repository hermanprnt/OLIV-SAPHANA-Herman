                        @* <input type="checkbox" id="checkall" />*@
                    </th>
                    <th class="afixed-column" rowspan="2" style="width:30px">
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="INVOICE_NO" data-sort="none" style="width:150px">
                        Invoice No
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="INVOICE_DATE" data-sort="none" style="width:75px">
                        Invoice Date
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="CURRENCY" data-sort="none" style="width:70px">
                        Currency
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="TOTAL_AMOUNT" data-sort="none" style="width:100px">
                        Total Amount
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="TURN_OVER" data-sort="none" style="width:100px">
                        Amount Before Tax
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="STATUS" data-sort="none" style="width:120px">
                        Invoice Status
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="STATUS" data-sort="none" style="width:120px">
                        Hard Copy Status
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="SUPPLIER_CD" data-sort="none" style="width:100px">
                        High Risk
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="SUPPLIER_CD" data-sort="none" style="width:100px">
                        Supplier Code
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="SUPPLIER_NAME" data-sort="none" style="width:150px">
                        Supplier Name
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="SUPPLIER_CD" data-sort="none" style="width:100px">
                        Due Dilligence
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="SUPPLIER_CD" data-sort="none" style="width:100px">
                        Agreement No
                    </th>
                    <th class="afixed-column" colspan="2" style="width:160px">
                        Payment Date
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="PROGRESS_STATUS" data-sort="none" style="width:110px">
                        Progress Status
                    </th>
                    <th class="afixed-column" colspan="2" style="width:180px">
                        Created
                    </th>
                    <th class="afixed-column" colspan="2" style="width:180px">
                        Submit
                    </th>
                    <th class="afixed-column" colspan="3" style="width:280px">
                        Posting
                    </th>
                    <th class="afixed-column" rowspan="2" style="width:280px" data-field="CERTIFICATE_ID" data-sort="none">
                        Certificate ID
                    </th>
                    <th class="afixed-column" rowspan="2" data-field="PAYMENT_DOC_NO" data-sort="none" style="width:120px">
                        Payment Doc No
                    </th>
                    <th rowspan="2" style="width:115px">
                        Notice
                    </th>
                    <th rowspan="2" style="width:100px">
