                        Date
                    </th>
                    <th class="afixed-column" style="width:100px" data-field="SUBMIT_BY" data-sort="none">
                        By
                    </th>
                    <th class="afixed-column" style="width:80px" data-field="SUBMIT_DT" data-sort="none">
                        Date
                    </th>
                    <th class="afixed-column" style="width:100px" data-field="POSTING_BY" data-sort="none">
                        By
                    </th>
                    <th class="afixed-column" style="width:80px" data-field="POSTING_DT" data-sort="none">
                        Date
                    </th>
                    <th class="afixed-column" style="width:100px" data-field="SAP_DOC_NO" data-sort="none">
                        AP Doc No
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (invoiceInquiryList != null && invoiceInquiryList.Count > 0)
                    {
                        int i = 0;
                        foreach (InvoiceInquiry item in invoiceInquiryList)
                        {
                                <tr id="row-@i" @if (item.GR_CANCEL == "Y") { <text> style="background-color:#FFFF99" </text> }>
                                    <td class="text-center afixed-column" style="width:35px">
                                        @if (item.STATUS == "CANCELLED" || item.STATUS == "PAID")
                                        {
                                            <input type="checkbox" name="selected" class="check afixed-column" disabled />
                                        }
                                        else
                                        {
                                            <input type="checkbox" name="selected" class="check afixed-column" />
                                        }
                                    </td>
                                    <td class="text-center cursor-link afixed-column" style="width:30px">
                                        <i class="fa fa-file-pdf-o" onclick="showFileDownload('@item.INVOICE_ID','@item.INVOICE_NO');">
                                        </i>
                                    </td>
                                    @if (item.STATUS != "CANCELLED")
                                    {
                                        <td class="text-center cursor-link afixed-column" style="width:150px">
                                            <a onclick="showDetail('@item.INVOICE_ID', '@item.INVOICE_NO'); return false;">@item.INVOICE_NO</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-center afixed-column" style="width:150px">
                                            @item.INVOICE_NO
                                        </td>
                                    }
                                    <td class="text-center afixed-column" style="width:75px">
                                        @(item.INVOICE_DATE.HasValue ? item.INVOICE_DATE.Value.ToString("dd.MM.yyyy") : string.Empty)
                                    </td>
                                    <td class="text-center afixed-column" style="width:70px">
                                        @item.CURRENCY
                                    </td>
                                    <td class="text-right afixed-column" style="width:100px">
                                        @if (item.CURRENCY == "IDR")
                                        {@item.TOTAL_AMOUNT.FormatCommaSeparator() }
                                    else
                                    { @item.TOTAL_AMOUNT.FormatCommaSeparatorWithDecimal();
                                }
                                    </td>
                                    <td class="text-right afixed-column" style="width:100px">
                                        @if (item.CURRENCY == "IDR")
                                        {@item.TURN_OVER.FormatCommaSeparator() }
                                    else
                                    { @item.TURN_OVER.FormatCommaSeparatorWithDecimal();
                                }
                                    </td>



                                    @if (item.STATUS.Replace("_", " ") == "ERROR POSTING")
                                    {
                                        <td class="text-center cursor-link ellipsis afixed-column" style="background-color: red;color: white !important;width:250px;">
                                            <input type="hidden" value="@item.STATUS.Replace("_", " ")" />
                                            <a style="color: white;" onclick="showDetailError('@item.INVOICE_ID', '@item.INVOICE_NO'); return false;">
                                                @if (item.AUTO_POSTING_FLAG == "Y")
                                                {
                                                    string status = item.STATUS.Replace("_", " ") + " A";
                                                    @status
                                                }
                                                else
                                                {
                                                    string status = item.STATUS.Replace("_", " ") + " M";
                                                    @status
                                                }
                                            </a>
                                        </td>
                                    }
                                    else if (item.STATUS.Replace("_", " ") == "CREATED" && item.NOTICE_FLAG == "Y")
                                    {
                                        <td class="text-left cursor-link afixed-column" style="width:200px">
                                            <input type="hidden" value="@item.STATUS.Replace("_", " ")" />
                                            <a onclick="showDetailVerification('@item.INVOICE_ID', '@item.INVOICE_NO'); return false;">NOTICE</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-left cursor-link afixed-column" style="width:200px">
                                            <input type="hidden" value="@item.STATUS.Replace("_", " ")" />
                                            <a onclick="showDetailVerification('@item.INVOICE_ID', '@item.INVOICE_NO'); return false;"> @item.STATUS.Replace("_", " ")</a>
                                        </td>
                                    }
                                    <td class="text-left cursor-link afixed-column" style="width:200px">
                                        <input type="hidden" value="@item.HARDCOPY_STATUS" />
                                        @item.HARDCOPY_STATUS
                                    </td>
                                    @if (item.DD_STATUS == "3")
                                    {
                                        <td class="text-center cursor-link afixed-column" style="width:90px;background-color:lawngreen">
                                            
                                        </td>
                                    }
                                    else if (item.DD_STATUS == "2")
                                    {
                                        <td class="text-center cursor-link afixed-column" style="width:90px;background-color:yellow">
                                            
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-center cursor-link afixed-column" style="width:90px;background-color:red">
                                            
                                        </td>
                                    }

                                    <td class="text-center cursor-link afixed-column" style="width:90px">
                                        @item.SUPPLIER_CD
                                    </td>
                                    <td style="width:150px" class="text-left  cursor-link ellipsis afixed-column" title="@item.SUPPLIER_NAME" style="max-width: 150px;">
                                        @item.SUPPLIER_NAME
                                    </td>
                                    @if (item.DUE_DILLIGENCE == "YES")
                                    {
                                        <td class="text-center cursor-link afixed-column" style="width:90px">
                                            @item.DUE_DILLIGENCE
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-center cursor-link afixed-column" style="width: 90px; background-color: red">
                                            @item.DUE_DILLIGENCE
                                        </td>
                                    }
                                    @if (item.AGREEMENT_NO == "YES")
                                    {
                                        <td class="text-center cursor-link afixed-column" style="width:90px">
                                            @item.AGREEMENT_NO
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-center cursor-link afixed-column" style="width:90px;background-color:red ">
                                            @item.AGREEMENT_NO
                                        </td>
                                    }


                                    <td class="text-center cursor-link afixed-column" style="width:80px">
                                        @*@(item.PAYMENT_PLAN_DATE.HasValue ? item.PAYMENT_PLAN_DATE.Value.ToString("dd.MM.yyyy") : string.Empty)*@
                                        @item.BASE_DATE
                                    </td>
                                    <td class="text-center cursor-link afixed-column" style="width:80px">
                                        @(item.PAYMENT_ACTUAL_DATE.HasValue ? item.PAYMENT_ACTUAL_DATE.Value.ToString("dd.MM.yyyy") : string.Empty)
                                    </td>
                                    <td class="text-center cursor-link afixed-column" style="width:110px">
                                        @if (item.ON_PROCESS_SAP_POST == "Y" || item.ON_PROCESS_SAP_REV == "Y")
                                        {<text>On Progress</text>}
                                    </td>
                                    <td class="text-center cursor-link ellipsis afixed-column" style="width:100px" title="@item.CREATED_BY">
                                        @item.CREATED_BY
                                    </td>
                                    <td class="text-center cursor-link ellipsis afixed-column" style="width:80px">
                                        @(item.CREATED_DT.HasValue ? item.CREATED_DT.Value.ToString("dd.MM.yyyy") : string.Empty)
                                    </td>
                                    <td class="text-center cursor-link ellipsis afixed-column" style="width:100px" title="@item.SUBMIT_BY">
                                        @item.SUBMIT_BY
                                    </td>
                                    <td class="text-center cursor-link ellipsis afixed-column" style="width:80px">
                                        @(item.SUBMIT_DT.HasValue ? item.SUBMIT_DT.Value.ToString("dd.MM.yyyy") : string.Empty)
                                    </td>
                                    <td class="text-center cursor-link ellipsis afixed-column" style="width:100px" title="@item.POSTED_BY">
                                        @item.POSTED_BY
                                    </td>
                                    <td class="text-center cursor-link ellipsis afixed-column" style="width:80px">
                                        @(item.POSTED_DT.HasValue ? item.POSTED_DT.Value.ToString("dd.MM.yyyy") : string.Empty)
                                    </td>
                                    <td class="text-center cursor-link ellipsis afixed-column" style="width:100px">
                                        @item.SAP_DOC_NO
                                    </td>
                                    <td class="text-center cursor-link ellipsis afixed-column" title="@item.CERTIFICATE_ID" style="width:280px">
                                        @item.CERTIFICATE_ID
                                    </td>
                                    <td class="text-left cursor-link ellipsis afixed-column" style="width:120px">
                                        @item.PAYMENT_DOC_NO
                                    </td>
                                    @if (!item.NOTICE_DATE.HasValue)
                                    {
                                        <td style="width:115px">
                                        </td>

                                    }
                                    else
                                    {
                                        <td class="text-center cursor-link afixed-column" style="width:115px">
                                            <i class="fa fa-envelope" onclick="openPopupNotice('@(item.NOTICE_BY)',
                            '@item.NOTICE_DATE.Value.ToString("dd.MM.yyyy")' , '@item.NOTICE_REMARK')"></i>
                                        </td>
                                    }
                                    @if (item.PPV_AMOUNT == null)
                                    {
                                        <td class="text-center cursor-link afixed-column" style="width:100px;"></td>
                                    }
                                    else
                                    {
                                        <td class="text-center cursor-link afixed-column" style="width:100px;">
                                            @Double.Parse(item.PPV_AMOUNT).FormatCommaSeparator()  <i>&nbsp;</i>
                                            <i class="cursor-link fa fa-file-pdf-o" onclick="showFilePpvAttachement('@item.INVOICE_ID','@item.INVOICE_NO');">
                                            </i>
                                        </td>
                                    }

                                    <td class="hidden">
                                        @item.INVOICE_ID @*23*@
                                    </td>
                                    <td class="hidden">
                                        @item.SAP_YEAR
                                    </td>
                                    <td class="hidden">
                                        @item.TAX_INVOICE_NO
                                    </td>
                                    <td class="hidden">
                                        @item.CERTIFICATE_ID
                                    </td>
                                    <td class="hidden">
                                        @item.TOTAL_AMOUNT @*27*@
                                    </td>
                                    <td class="hidden">
                                        @item.TAX_INVOICE_AMOUNT
                                    </td>
                                    <td class="hidden">
                                        @item.PAY_METHOD
                                    </td>
                                    <td class="hidden">
                                        @item.TERM_PAY
                                    </td>
                                    <td class="hidden">
                                    </td>
                                    <td class="hidden">
                                        @item.RECEIVED_STATUS @*32*@
                                    </td>
                                    <td class="hidden">
                                        @item.GR_CANCEL
                                    </td>
                                    <td class="hidden">
                                        @*34*@
                                        @(item.TAX_INVOICE_DT.HasValue ? item.TAX_INVOICE_DT.Value.ToString("dd.MM.yyyy") : string.Empty)
                                    </td>
                                    <td class="hidden">
                                        @item.LOG_DOC_NO
                                    </td>
                                    <td class="hidden">
                                        @item.ON_PROCESS_SAP_POST
                                    </td>
                                    <td class="hidden">
                                        @item.ON_PROCESS_SAP_REV
                                    </td>
                                    <td class="hidden">
                                        @item.AUTO_POSTING_FLAG
                                    </td>
                                </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="26" class="text-center">
                                No data retrieved.
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("_UIPaging")

<script type="text/javascript">
    $("#tScrollBody").scroll(function () {
        $("#tScrollHead").scrollLeft($("#tScrollBody").scrollLeft());
    });

    var table = document.getElementById("dynamic-table");
    if (table != null) {
        for (var i = 0; i < table.rows.length; i++) {
            for (var j = 0; j < table.rows[i].cells.length; j++) {
                table.rows[i].cells[j].onclick = function () {
                    tableText(this);
                    sorting_execute = '1';
                };
            }
        }
    }

    // Sorting function [start]
    function tableText(tableCell) {
        var removeClass;
        var addClass;
        var dataSort;

        if (tableCell.getAttribute("class").indexOf('sorting') >= 0) {
            if (tableCell.getAttribute("class").indexOf('sorting_asc') >= 0) {

                removeClass = 'sorting_asc';
                addClass = 'sorting_desc';
                dataSort = 'desc';

            } else if (tableCell.getAttribute("class").indexOf('sorting_desc') >= 0) {

                removeClass = 'sorting_desc';
                addClass = 'sorting_none';
                dataSort = 'none';

            } else {

                removeClass = 'sorting_none';
                addClass = 'sorting_asc';
                dataSort = 'asc';

            }
        }


        //reset all
        var tableReset = document.getElementById("dynamic-table");
        if (tableReset != null) {
            for (var i = 0; i < tableReset.rows.length; i++) {
                for (var j = 0; j < tableReset.rows[i].cells.length; j++) {

                    if (tableReset.rows[i].cells[j].className.indexOf('sorting_asc') >= 0) {
                        tableReset.rows[i].cells[j].classList.remove('sorting_asc');
                        tableReset.rows[i].cells[j].classList.add('sorting');
                        tableReset.rows[i].cells[j].dataset.sort = 'none';
                    }

                    if (tableReset.rows[i].cells[j].className.indexOf('sorting_desc') >= 0) {
                        tableReset.rows[i].cells[j].classList.remove('sorting_desc');
                        tableReset.rows[i].cells[j].classList.add('sorting');
                        tableReset.rows[i].cells[j].dataset.sort = 'none';
                    }

                }
            }
        }
        // end

        if (tableCell.getAttribute("class").indexOf('sorting') >= 0) {
            tableCell.classList.remove(removeClass);
            tableCell.classList.add(addClass);
            tableCell.dataset.sort = dataSort;

            if (pagepos == null) pagepos = 1;

            $.ajax({
                type: "GET",
                url: '@Url.Action("GetInvoiceInquirySort")' + '?createdDateSearch=' + $('#createdDateSearch').val() +
                    '&&submissionDateSearch=' + $('#submissionDateSearch').val() +
                    '&&invoiceDateSearch=' + $('#invoiceDateSearch').val() + '&&supplierSearch=' + $('#supplierSearch').val() +
                    '&&planPaymentDateSearch=' + $('#planPaymentDateSearch').val() + '&&invoiceNoSearch=' + $('#invoiceNoSearch').val() +
                    '&&statusSearch=' + $('#statusSearch').val() + '&&page=' + pagepos + '&&size=' + $("#pageSize").val() +
                    '&&field=' + tableCell.dataset.field + '&&sort=' + dataSort,
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    $("#tblScroll").find('tbody').html(result);
                }
            });
        }
    }
    // Sorting function [end]


</script>