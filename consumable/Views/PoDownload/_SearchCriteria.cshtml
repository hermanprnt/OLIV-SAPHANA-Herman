@{
    string approvalStatus = (string) ViewData["approvalStatus"];
}
<form role="form" class="form-horizontal _criteria" id="searchForm">
<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-12">
        <div class="col-xs-12 col-sm-6 col-md-4">           
            <div class="form-group form-group-xs _criteria">
                <label class="col-xs-4 col-sm-3 col-md-4 control-label text-muted" required-left>
                    PO Created Date</label>
                <div class="col-xs-8 col-sm-9 col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon" style="cursor: pointer;"><i class="fa fa-calendar bigger-110">
                        </i></span>
                        <input class="form-control" type="text" name="date-range-picker" id="poCreatedDateSearch"
                            data-date-format="dd.mm.yyyy" />
                    </div>
                </div>
            </div>
            <div class="form-group form-group-xs _criteria">
                <label class="col-xs-4 col-sm-3 col-md-4 control-label text-muted">
                    PO Description</label>
                <div class="col-xs-8 col-sm-9 col-md-8">
                    <input class="form-control" type="text" id="poDescriptionSearch" />
                </div>
            </div>
            <div class="form-group form-group-xs _criteria">
                <label class="col-xs-4 col-sm-3 col-md-4 control-label text-muted">
                    PO Amount</label>
                <div class="col-xs-8 col-sm-9 col-md-8 form-group">
                    <div class="col-xs-8 col-sm-9 col-md-5">
                        <input class="form-control" type="text" id="poAmountFromSearch" />
                    </div>
                    <div class="col-xs-8 col-sm-9 col-md-1">
                        -
                    </div>
                    <div class="col-xs-8 col-sm-9 col-md-5">
                        <input class="form-control" type="text" id="poAmountToSearch" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="form-group form-group-xs _criteria">
                <label class="col-xs-4 col-sm-3 col-md-4 control-label text-muted">
                    PO Release Date</label>
                <div class="col-xs-8 col-sm-9 col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon" style="cursor: pointer;"><i class="fa fa-calendar bigger-110">
                        </i></span>
                        <input class="form-control" type="text" name="date-range-picker" id="poReleasedDateSearch"
                            data-date-format="dd.mm.yyyy" />
                    </div>
                </div>
            </div>
            <div class="form-group form-group-xs _criteria">
                <label class="col-xs-4 col-sm-3 col-md-4 control-label text-muted">
                    PO Number</label>
                <div class="col-xs-8 col-sm-9 col-md-8">
                    <input class="form-control" type="text" id="poNumberSearch" />
                </div>
            </div>
            @*<div class="form-group form-group-xs _criteria">
                <label class="col-xs-4 col-sm-3 col-md-4 control-label text-muted">
                    PO Creator</label>
                <div class="col-xs-8 col-sm-9 col-md-8">
                    <input class="form-control" type="text" id="poCreatorSearch" />
                </div>
            </div>*@
        </div>
        @* Supplier *@
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="form-group form-group-xs _criteria">
                <label class="col-xs-4 col-sm-5 col-md-3 control-label text-muted">
                    Supplier</label>
                <div class="input-group input-group-xs col-xs-8 col-sm-7 col-md-8" style="padding-left: 11px;
                    padding-right: 10px; height: 26px;">
                    <input id="supplierSearch" class="form-control" type="text" style="font-size: 9pt;"
                        value="@ViewData["vendCodeLogin"]" placeholder="Select supplier" onkeypress="onEnterSearchData(event);"
                        @ViewData["readonly"]>
                    <span class="input-group-btn">
                        <div class="btn-group" id="btn-group">
                            <button id="btnlookupsuppliersearch" class="multiselect dropdown-toggle btn btn-default btn-sm"
                                type="button" style="height: 30px; line-height: 0;" aria-expanded="false" onclick="javascript:openPopup()"
                                @ViewData["disabled"]>
                                <i class="fa fa-caret-down" style="margin-right: -4px"></i>&nbsp</button>
                            <div class="form-horizontal multiselect-container dropdown-menu" style="left: -478px;">
                                <div class="form-group form-group-xs">
                                    <div>
                                        <div class="input-group">
                                            <input id="txtSearchLookupSupplier" class="form-control" type="text" placeholder="input supplier...."
                                                style="margin-left: 5px;" onkeypress="onEnterSearchDataLookupSupplier(event);" />
                                            <span class="input-group-btn">
                                                <button type="button" id="btnSearchLookupSupplier" data-loading-text="<i class='glyphicon-refresh-animate glyphicon glyphicon-refresh'></i>"
                                                    class=" btn btn-default btn-sm " style="margin-left: 5px; margin-right: 5px;
                                                    height: 30px;">
                                                    &nbsp<i class="fa fa-search"></i>
                                                </button>
                                                <button id="btnclearlookup" class=" btn btn-default btn-sm " title="Clear" type="button"
                                                    style="margin-right: 5px; height: 30px;" onclick="javascript:clearPopupFilter()">
                                                    &nbsp<i class="fa  fa-eraser"></i>&nbsp</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                @Html.Partial("_LookupTableSupplier")
                                <div class="form-group form-group-xs">
                                    <div class="text-right" style="margin-right: 7px;">
                                        <button type="button" class="btn btn-primary btn-xs" style="width: 70px;" onclick="javascript:gridlookupSelected('OK')">
                                            Ok</button>
                                        <button type="button" class="btn btn-danger btn-xs" style="width: 70px;" onclick="javascript:gridlookupSelected('CS')">
                                            Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </span>
                </div>
            </div>
            <div class="form-group form-group-xs _criteria">
                <label class="col-xs-4 col-sm-3 col-md-4 control-label text-muted">
                    Approval Status</label>
                <div class="col-xs-8 col-sm-9 col-md-8">
                    <select id="approvalStatusSearch" class="cursor-1" style="width: 100%;">
                        <option value="All" @if(approvalStatus.Equals("All")) {<text>selected</text>}>All</option>  
                        <option value="Not Yet" @if(approvalStatus.Equals("Not Yet")) {<text>selected</text>}>Not Yet</option>          
                        <option value="Approved By SH" @if(approvalStatus.Equals("Approved By SH")) {<text>selected</text>}>Approved By SH</option>  
                        <option value="Approved By DPH" @if(approvalStatus.Equals("Approved By DPH")) {<text>selected</text>}>Approved By DPH</option>  
                        <option value="Approved By DH" @if(approvalStatus.Equals("Approved By DH")) {<text>selected</text>}>Approved By DH</option>  
                        @*<option value="Fully Approved" @if(approvalStatus.Equals("Fully Approved")) {<text>selected</text>}>Fully Approved</option>*@      
                    </select>
                </div>
            </div>
           
            <div class="col-xs-6 col-md-12 text-right">
                <div class="form-group-xs _criteria">
                    <button type="button" class="btn btn-primary btn-xs" onclick="javascript:searchData()">
                        Search</button>
                    <button type="reset" class="btn btn-default btn-xs" onclick="javascript:clearData()">
                        Clear</button>
                </div>
            </div>
        </div>
    </div>
</div>
</form>
